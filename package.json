{
  "name": "@persefonejs/apollo-adonis",
  "version": "1.0.0",
  "description": "adapter Apollo server",
  "repository": "https://github.com/persefonejs/apollo-adonis",
  "author": "valmir.php@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "tsc --watch",
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --fix --project tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "build-in-prod": "npm run clean && tsc",
    "prepublishOnly": "npm run build",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "ci-test": "node japaFile.js",
    "ci-coverage": "nyc --reporter=text-summary --clean node japaFile.js"
  },
  "devDependencies": {
    "@adonisjs/mrm-preset": "^2.2.4",
    "@types/node": "^13.11.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "doctoc": "^1.4.0",
    "husky": "^4.2.3",
    "japa": "^3.0.1",
    "mrm": "^2.1.1",
    "np": "^6.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-adonis": "^1.0.8",
    "eslint-plugin-prettier": "^3.1.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  }
}
